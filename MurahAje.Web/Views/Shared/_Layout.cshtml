    <div class="ui huge borderless stackable menu">
        <div class="header container item menu-logo">
            <div class="brand-logo">
                <img src="~/img/LogoMurahaje.png" alt="LogoMurahaje">
            </div>
        </div>
        <div class="item container menu-search" style="padding-left: 50px;">
            <div class="ui search">
