<script type="text/javascript">
    
    $(function () {



        var hub = $.connection.SocialHub;

        $.connection.hub.logging = true;
        $.connection.hub.start().done(function () {
            $('#alertdiv').append('connection ready..');
           
            hub.server.GetUsers();
        });
        hub.client.DisplayUsers = DisplayUsers;

        function DisplayUsers(posts) {
            $("#table1 tbody").empty();
            $.each(posts, function (index) {
                var post = posts[index];
                $("#table1 tbody").append(
                    '<tr><td><img src="' + post.picUrl + '" /></td><td>' + post.fullName + '</td><td>' + post.email + '</td><td>' + post.loginName + '</td>'
                );
            });

        }
        


    });
</script>

<div class="well alert-danger" id="alertdiv"></div>
<table class="table table-bordered" id="table1" >
    <thead>
        <tr>
            <td>Pic</td>
            <td>Nama</td>
            <td>Email</td>
            <td>ID</td>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>